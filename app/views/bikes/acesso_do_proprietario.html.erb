<script type="text/javascript">
  var trr_emai = new LiveValidation('email_tr')
  trr_emai.add( Validate.Presence )
  trr_emai.add( Validate.Email )
  
  var trr_email = new LiveValidation('email_tr_confir')
  trr_email.add( Validate.Presence )
  trr_email.add( Validate.Email )
  trr_email.add( Validate.Confirmation,  { match: 'email_tr' } )
  
  var trr_price = new LiveValidation('price_tr')
  trr_price.add( Validate.Presence )
  
  
  var tr_name = new LiveValidation('t_name');
  tr_name.add( Validate.Presence );
  
  
  var tr_cpf = new LiveValidation('t_cpf');
  tr_cpf.add( Validate.Presence );
  tr_cpf.add( Validate.Length, { minimum: 11 } );
  
  var tr_email = new LiveValidation('t_email');
  tr_email.add( Validate.Presence );
  tr_email.add( Validate.Email )
  
  var tr_area_code = new LiveValidation('t_area_code');
  tr_area_code.add( Validate.Presence );
  tr_area_code.add( Validate.Length, { minimum: 2 } );
  
  var tr_phone = new LiveValidation('t_phone');
  tr_phone.add( Validate.Presence );
  tr_phone.add( Validate.Length, { minimum: 9 } );
  
  var tr_street = new LiveValidation('t_street')
  tr_street.add( Validate.Presence )
  
  var tr_number = new LiveValidation('t_number')
  tr_number.add( Validate.Presence )
  tr_number.add( Validate.Length, { minimum: 4 } );
  
  var tr_district = new LiveValidation('t_district')
  tr_district.add( Validate.Presence )
  
  var tr_cep = new LiveValidation('t_cep')
  tr_cep.add( Validate.Presence )
  tr_cep.add( Validate.Length, {minimum: 10 } );
  
  var tr_city = new LiveValidation('t_city')
  tr_city.add( Validate.Presence )   
  
  var tr_state = new LiveValidation('t_state')
  tr_state.add( Validate.Presence )   
  tr_state.add( Validate.Length, {minimum: 2 } );
  
  
  $(".tnsfr_open-model").click(function(){
     $("#tnsfr_add-model").modal('show')
  });
  
</script>

