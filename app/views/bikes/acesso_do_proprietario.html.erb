

<%= render "shared/header" %>
<!-- container -->
<div class="container">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">
      <% if @bike_owner.present? && @bike_details.present? %>
      <%= @bike_details.model%>-<%= @bike_owner.certification %>
      <%end%>
    </li>
  </ol>
  <div class="row">
    <div class="container-fluid">
      <div class="row">
        <div class="">
          <h2 class="page-header">      
            <b>Atualizar informações do proprietário</b>
          </h2>
          <div class="col-lg-6">
            <div class="panel panel-default">
              <div class="panel-heading">&nbsp;</div>
              <div class="panel-body">
                <div class="row col-lg-11">
                  <p class="notice"><%= notice %></p>
                  <%= form_for(@bike_owner,url: update_uncertified_bike_path, html: { method: :put }) do |f| %>
                  <%= hidden_field_tag :owner_id,params[:id]%>
                  <div class="form-group">
                    <%= f.label(:name, 'Nome') %><br>
                    <%= f.text_field :name, :class => "form-control",:id=>"t_name"%>
                  </div>
                  <div class="form-group">
                    <%= f.label(:cpf, 'CPF') %><br>
                    <%= f.text_field :cpf, :class => "form-control",:id=>"t_cpf"%>
                  </div>
                  <div class="form-group">
                    <%= f.label(:email, 'E-Mail') %><br>
                    <%= f.text_field :email, :class => "form-control",:id=>"t_email"%>
                  </div>
                  <div class="form-group">
                    <%= f.label(:area_code, 'Código de Área') %><br>
                    <%= f.text_field :area_code, :class => "form-control",:id=>"t_area_code"%>
                  </div>
                  <div class="form-group">
                    <%= f.label(:cell_phone_number, 'Celular')  %>
                    <%= f.text_field :cell_phone_number, :class => "form-control",:id=>"t_phone"%>
                  </div>
                  <div class="form-group">
                    <label>Endereço</label><br>
                    <%= f.text_field :street, :class => "form-control", :placeholder => "Rua, Avenida...",:id=>"t_street" %><br/>
                    <div class="form-inline">
                      <%= f.text_field :number, :class => "form-control", :maxlength => "4", :placeholder => "Número", :size => "8",:id=>"t_number" %>
                      &nbsp;&nbsp;
                      <%= f.text_field :district, :class => "form-control", :placeholder => "Complemento", :size => "20",:id=>"t_district" %>
                      <%= f.text_field :zipcode, :class => "form-control frm-wdth", :maxlength => "10", :placeholder => "CEP",:id=>"t_cep"%>
                    </div>
                    <div class="form-inline">
                      <%= f.text_field :city, :class => "form-control", :placeholder => "Cidade", :size => "30",:id=>"t_city" %>
                      &nbsp;&nbsp;
                      <%= f.text_field :state, :class => "form-control", :maxlength => "2", :placeholder => "Estado", :size => "8",:id=>"t_state" %>
                    </div>
                  </div>
                  <hr/>
                  <div class="form-group">
                    <%= f.submit "ATUALIZAR",:class=>"btn btn-success update-btn butns-stle1"%>
                  </div>
                  <%end%>
                </div>
              </div>
            </div>
          </div>
          <!-- Panel End -->
        </div>
      </div>
    </div>
    <!-- Row End -->
  </div>
  <!-- Container Fluid -->
</div>
<!-- First Row -->
</div>
</div>  <!-- /container -->
