

<div id="page-wrapper">
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">MaintenanceEvent</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-14">
    <a class="new_event_model-open btn btn-outline btn-info">New Event</a>
    <%= link_to 'Back',admin_bike_path,:class=>"btn btn-outline btn-info"%>
    <br/><br/>
    <div class="panel panel-default" style="width: 1050px;">
      <div class="panel-heading">MaintenanceEvents Detalhes</div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <p class="notice"><%= notice %></p>
            <table class="table table-bordered">
              <tr>
                <th>Description</th>
                <th>Receipt</th>
                <th>Event Date</th>
                <th>Action</th>
              </tr>
              <% if !@maintenance_events.nil? %>
              <% @maintenance_events.each do |event|%>
              <tr>
                <td><%= event.description %></td>
                <td><%= image_tag event.maintenance_receipt_image%></td>
                <td><%= event.created_at.strftime("%d-%m-%Y") %></td>
                <td>
                  <a class="create_event fa fa-pencil" id="<%= event.id%>"></a>
                  <!-- Edit Maintenance Event-->
                  <div id="event_add-model_<%= event.id%>" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                          <h4 class="modal-title">Edit MaintenanceEvent</h4>
                        </div>
                        <div class="modal-body">
                          <%= form_for(event,:url => admin_update_event_path,:method=>"PUT") do |events| %>
                          <%= hidden_field_tag :event_id,event.id%>
                          <div class="form-group">
                            <%= events.label(:description, 'Description')%>
                            <%= events.text_area :description,:class=>"form-control" %>
                          </div>
                          <div class="form-group">
                            <%= events.label(:description, 'Receipt')%>
                            <%= events.file_field :maintenance_receipt_image%>
                          </div>
                          <hr>
                          <div class="form-group">
                            <%= events.submit "ATUALIZAR",:class=>"btn btn-success upte-btn"%>
                          </div>
                          <%end%>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!--Event Edit End -->
                </td>
              </tr>
              <%end%>
              <%end%>
            </table>
          </div>
          <!-- New Event Create -->
          <div id="new_event_model-add" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">New MaintenanceEvent</h4>
                </div>
                <div class="modal-body">
                  <%= form_for(MaintenanceEvent.new,:url=>admin_create_event_path) do |event| %>
                  <%= hidden_field_tag :bike_id,params[:id]%>
                  <div class="form-group">
                    <%= event.label(:description, 'Description')%>
                    <%= event.text_area :description,:class=>"form-control" %>
                  </div>
                  <div class="form-group">
                    <%= event.label(:description, 'Receipt')%>
                    <%= event.file_field :maintenance_receipt_image%>
                  </div>
                  <hr>
                  <div class="form-group">
                    <%= event.submit "Submit",:class=>"btn btn-success cret-btn" %>
                  </div>
                  <%end%>
                </div>
              </div>
            </div>
          </div>
          <!-- New Event Model End -->
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(".create_event").click(function(){
        var id = this.id
      $("#event_add-model_"+id).modal('show')
  });
  
  $(".new_event_model-open").click(function(){
      $("#new_event_model-add").modal('show')
  });
</script>
