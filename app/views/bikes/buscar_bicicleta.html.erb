

<div id="page-wrapper">
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-14">
      <h1 class="page-header">Buscar Bicicleta</h1>
      <div class="col-md-12 col-sm-9 col-sm-offset-0">
        <div class="panel panel-default">
          <div class="panel-heading">&nbsp;</div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
                <div>
                  <%= form_tag buscar_bicicleta_path, :method => 'get' do %>
                  <span class="form-controller col-md-4 bike_search">
                  <%= text_field_tag :bike_search, params[:bike_search],:class=>"form-control ",:placeholder=>"Digite o Certificado, Número de Série, Marca ou Modelo"%></span>
                  <%end%>   
                </div>
                <br/><br/><br/>
                <p class="notice" style="color: red;"><%= notice %></p>
                <table class="table table-striped table-bordered table-hover">
                  <tr>
                    <th>ID</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Tamanho</th>
                    <th>Fabricação</th>
                    <th>Número de Série</th>
                    <th>Certificado</th>
                    <th width="1px"></th>
                  </tr>
                  <% @bikes.each do |bike|%>
                  <% if bike.certification.present? && (bike.bike_registration_confirm == true).present? %>
                  <tr>
                    <td><%= bike.id %></td>
                    <td><%= bike.brand%></td>
                    <td><%= bike.model%></td>
                    <td><%= bike.size%></td>
                    <td><%= bike.building_date%></td>
                    <td><%= bike.serial_number %></td>
                    <td><%= bike.certification %></td>
                    <td>&nbsp;&nbsp;&nbsp;<%= link_to "Detalhes",certified_bikes_path(bike) %></td>
                  </tr>
                  <%end%>
                  <%end%>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<style type="text/css">
  .bike_search{
    margin-left: 625px;
  }
</style>