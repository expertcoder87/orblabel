<div id="page-wrapper">
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-14">
      <h1 class="page-header">Minhas Bicicletas</h1>
      <div class="col-md-12 col-sm-9 col-sm-offset-0">
        <div class="panel panel-default">
          <div class="panel-heading">&nbsp;</div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
                <p class="notice"><%= notice %></p>
                <h3>Bicicletas Certificadas</h3>
                <table class="table table-striped table-bordered table-hover">
                  <tr>
                    <th>ID</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Tamanho</th>
                    <th>Fabricação</th>
                    <th>Número de Série</th>
                    <th>Certificado</th>
                    <th></th>
                  </tr>
                  <% @bikes.each_with_index do |bike,index|%>
                  <% if bike.certification.present? && (bike.bike_registration_confirm == true).present? %>
                  <tr>
                    <td><%= bike.id %></td>
                    <td><%= bike.brand%></td>
                    <td><%= bike.model%></td>
                    <td>
                      <% if bike.size == 0 %>
                      Pequeno
                      <%elsif bike.size == 1 %>
                      Médio
                      <%elsif bike.size == 2 %>
                      Grande
                      <% elsif bike.size == 3 %>
                      Extra-Grande
                      <%else%>
                      Não selecionado
                      <%end%>
                    </td>
                    <td><%= bike.building_date%></td>
                    <td><%= bike.serial_number %></td>
                    <td><%= bike.certification %></td>
                    <td><%= link_to "Detalhes",certified_bikes_path(bike) %></td>
                  </tr>
                  <%end%>
                  <%end%>
                </table>
                <h3>Bicicletas não Certificadas</h3>
                <table class="table table-striped table-bordered table-hover">
                  <tr>
                    <th>ID</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Tamanho</th>
                    <th>Fabricação</th>
                    <th>Número de Série</th>
                    <th></th>
                  </tr>
                  <% @bikes.each_with_index do |bike,index|%>
                  <% if bike.certification.nil? && (bike.bike_registration_confirm == true).present? %>
                  <tr>
                    <td><%= bike.id %></td>
                    <td><%= bike.brand%></td>
                    <td><%= bike.model%></td>
                    <td>
                      <% if bike.size == 0%>
                      Pequeno
                      <%elsif bike.size == 1 %>
                      Médio
                      <%elsif bike.size == 2 %>
                      Grande
                      <% elsif bike.size == 3 %>
                      Extra-Grande
                      <%else%>
                      Não selecionad
                      <%end%>
                    </td>
                    <td><%= bike.building_date%></td>
                    <td><%= bike.serial_number %></td>
                    <td>
                      <%=link_to '', bike, method: :delete, data: { confirm: 'Are you sure?' },:class=>"fa fa-trash-o" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                      <%=link_to 'Detalhes', uncertified_bikes_path(bike) %> 
                  </tr>
                  <%end%>
                  <%end%>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

