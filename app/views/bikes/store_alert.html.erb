

<div id="page-wrapper">
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Store Alerts</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-14">
    <%= link_to "Certificados",admin_certificate_path %>&nbsp;&nbsp;&nbsp;
    <%= link_to "Generate Certificados",admin_genarate_certificate_path%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to "Store Alert",store_alert_path %>
    <hr>
    <div class="panel panel-default pnl-wdth">
      <div class="panel-heading">StoreAlert Detalhes</div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <p class="notice"><%= notice %></p>
            <table class="table table-striped table-bordered table-hover">
              <tr>
                <th>Store ID</th>
                <th>Store Alert</th>
              </tr>
              <% @stores.each do |store|%>
              <%if !(store.email == "admin@admin.com")%>
              <tr>
                <td><%= store.id %></td>
                <td><%= store.no_of_certificate%></td>
                <br>
              </tr>
              <%end%>
              <%end%>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

