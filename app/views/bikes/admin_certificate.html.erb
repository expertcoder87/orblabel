<div id="page-wrapper">
    <div class="row">
         <div class="col-lg-12">
            <h1 class="page-header">Certificados</h1>
    </div>
</div>
  <div class="row">
    <div class="col-lg-14">
      <%= link_to "Certificados",admin_certificate_path %>&nbsp;&nbsp;&nbsp;
      <%= link_to "Generate Certificados",admin_genarate_certificate_path%>&nbsp;&nbsp;&nbsp;
      <%= link_to "Store Alert",store_alert_path %>
      <hr>
      <div class="panel panel-default pnl-wdth">
        <div class="panel-heading">Certificados Detalhes</div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
                <p class="notice"><%= notice %></p>
                <table class="table table-striped table-bordered table-hover">
                  <tr>
                      <th>Certificate</th>
                      <th>Access Code</th>
                      <th>Delete Certificate</th>
                      <th>Access Code</th>
                  </tr>
                  <tr>
                  <% @bikes.each do |bike|%>
                    <% @uncertified.each do |access_code| %>
                      <% if bike.id == access_code.bike_id %>
                        <% if access_code.certification.present? %>
                          <td><%= access_code.certification %></td>
                          <td><%= access_code.access_code%></td>
                          <td><%= link_to '',admin_certificate_destroy_path(access_code.certification),:method=>"GET",:class=>"fa fa-trash-o"%></td>
                          <td><%= link_to 'Generate',admin_access_code_path(access_code.certification),:method=>"GET"%></td>
                        <%end%>
                      <%end%>
                  </tr>
                    <%end%>
                  <%end%>
                </table>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>

